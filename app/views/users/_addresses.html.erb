<% if current_user.addresses.present? %>
<h2><%= Spree::Address.model_name.human(:count => 2) %></h2>
<table class="order-summary" width="545">
  <tbody>
  <% current_user.addresses.each do |address| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= address %></td>
	  <td>
		<%= link_to t(:edit), edit_address_path(address), :class => "button" %>&nbsp;
		<%= link_to t(:remove), address_path(address), :class => "button", :method => :delete, :confirm => t(:are_you_sure) %>
	  </td>
	</tr>
  <% end %>
  </tbody>
</table>
<% end %>
